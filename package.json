{
  "name": "@loancrate/prisma-schema-parser",
  "version": "2.0.0",
  "description": "Prisma Schema Parser",
  "keywords": [
    "parser",
    "prisma",
    "schema"
  ],
  "homepage": "https://github.com/loancrate/prisma-schema-parser#readme",
  "bugs": {
    "url": "https://github.com/loancrate/prisma-schema-parser/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loancrate/prisma-schema-parser.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "lint": "eslint src --ext .ts",
    "generate-peggy": "./scripts/generate-peggy.sh",
    "prepare": "npm run generate-peggy && npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "prettier": "prettier . --write",
    "test": "jest"
  },
  "dependencies": {
    "catch-unknown": "^2.0.0",
    "error-cause": "^1.0.8",
    "no-case": "^3.0.4",
    "type-fest": "^2.19.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/error-cause": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "peggy": "^2.0.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --list-different",
    "*.ts": "eslint"
  },
  "publishConfig": {
    "access": "public"
  }
}
